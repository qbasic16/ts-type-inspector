{
  "name": "ts-type-inspector",
  "version": "1.1.1",
  "description": "Type safe tool for value validation",
  "files": [
    "dist"
  ],
  "exports": {
    "import": "./dist/esm2021/index.js",
    "require": "./dist/cjs/index.js"
  },
  "types": "./dist/typings",
  "scripts": {
    "build": "npm run build:clean && npm run build:cjs && npm run build:esm2021 && npm run build:typings",
    "build:clean": "npx --quiet rimraf dist/",
    "build:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:esm2021": "tsc -p ./tsconfig.esm2021.json && echo {\"type\":\"module\"} > dist/esm2021/package.json",
    "build:typings": "tsc -p ./tsconfig.typings.json",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "reset-modules": "npx --quiet rimraf node_modules/ package-lock.json",
    "reset-creation": "npx --quiet rimraf tests/reports/",
    "reset": "npm run reset-creation && npm run build:clean && npm run reset-modules",
    "validate": "npm run reset && npm i && npm run build && npm test",
    "create": "npm run reset-creation && npm run build && npm test",
    "produce": "npm run validate && npm i --only=prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maddin1502/ts-type-inspector.git"
  },
  "keywords": [
    "typescript",
    "validation",
    "type-safe",
    "validator",
    "schema"
  ],
  "author": "maddin1502",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maddin1502/ts-type-inspector/issues"
  },
  "homepage": "https://github.com/maddin1502/ts-type-inspector#readme",
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "jest": "^27.4.3",
    "jest-class-extended": "^1.0.1",
    "jest-html-reporters": "^2.1.6",
    "jest-junit": "^13.0.0",
    "ts-jest": "^27.1.0",
    "ts-node": "^10.4.0",
    "tslib": "^2.4.0",
    "typescript": "4.6.*"
  },
  "dependencies": {
    "@sideway/address": "^4.1.2",
    "ts-lib-extended": "^1.2.0"
  }
}
